#!/bin/bash

if [ $# -eq 0 ]; then
  echo "Usage: $0 <port1> <port2> ..."
  exit 1
fi

for port in "$@"; do
  # ポート番号からPIDを取得
  pid=$(lsof -t -i :$port)

  # PIDが見つかった場合、killコマンドを実行
  if [ -n "$pid" ]; then
    echo "Killing process with PID: $pid on port $port"
    kill "$pid"
  else
    echo "No process found on port $port"
  fi
done
